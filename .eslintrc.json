{
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "jasmine": true
    },
    "globals": {
        "describe": true,
        "require": true,
        "process": true,
        "__dirname": true
    },
    "rules": {
        "indent": ["error", 4],
        "func-names": ["error", "never"],
        "one-var": ["error", "always"],
        "comma-dangle": ["error", "never"],
        "linebreak-style": "off",
        "no-var": "off",
        "eqeqeq": "off",
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "never"
            }
        ],
        "no-param-reassign": "warn",
        "no-shadow": "warn",
        "no-unused-vars": "warn",
        "no-console": "warn"
    }
}
